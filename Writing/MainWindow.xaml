<Window x:Class="Writing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Writing"
        mc:Ignorable="d"
        
        Title="MainWindow" Height="450" Width="500">
    <Grid Background="#832020" Margin="0,0,10,-16" >
        <TextBox Name="SendMessage" Width="200" Height="50" Margin="10,0,100,290" FontSize="30"></TextBox>
        <Button  Width="80" Height="50" Margin="10,10,400,300" Content="send" FontSize ="30" Click="Button_Click"></Button>
        <ListBox Name="messages" Width="200" Height="320" Margin="10,110,100,0"></ListBox>
    </Grid>
</Window>
